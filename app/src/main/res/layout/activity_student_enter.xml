<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="?attr/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Quiz Code"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:textColor="?attr/colorPrimaryText"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextTeacherCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Teacher Code"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background2"
        android:textColor="?attr/colorText"
        android:textColorHint="?attr/colorHint" />

    <Button
        android:id="@+id/buttonJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join"
        android:background="@drawable/button_background2"
        android:textColor="?attr/colorButtonText"
        android:padding="12dp" />
</LinearLayout>
